<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textViewSongAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/song_author"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSongName"
        app:layout_constraintTop_toBottomOf="@+id/textViewSongName" />

    <TextView
        android:id="@+id/textViewSongName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elegantTextHeight="true"
        android:text="@string/song_name"
        android:textColor="@color/textBlack"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonPlayPause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="480dp"
        android:background="@drawable/button"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonPrev"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:src="@drawable/ic_prev_track"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonPlayPause"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPlayPause" />

    <ImageButton
        android:id="@+id/imageButtonNext"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/button"
        android:src="@drawable/ic_next_track"
        app:layout_constraintStart_toEndOf="@+id/imageButtonPlayPause"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPlayPause" />

</androidx.constraintlayout.widget.ConstraintLayout>