<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="onAudioControlClick"
        android:text="@string/stop"
        app:layout_constraintStart_toEndOf="@+id/buttonPlayPause"
        app:layout_constraintTop_toTopOf="@+id/buttonPlayPause" />

    <Button
        android:id="@+id/buttonFool"
        android:layout_width="346dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:onClick="onSongClick"
        android:text="Fool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDrake" />

    <Button
        android:id="@+id/button20Khz"
        android:layout_width="346dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:onClick="onSongClick"
        android:text="20 kHz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5Khz" />

    <Button
        android:id="@+id/button5Khz"
        android:layout_width="346dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:onClick="onSongClick"
        android:text="5 kHz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSamurai" />

    <Button
        android:id="@+id/buttonSin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="32dp"
        android:onClick="onWaveClick"
        android:text="Sin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/buttonStop"
        app:layout_constraintTop_toTopOf="@+id/buttonStop" />

    <Button
        android:id="@+id/buttonPlayPause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:onClick="onAudioControlClick"
        android:text="@string/playPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDrake"
        android:layout_width="346dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:onClick="onSongClick"
        android:text="Drake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStop" />

    <Button
        android:id="@+id/buttonSamurai"
        android:layout_width="346dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:onClick="onSongClick"
        android:text="Samurai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFool" />

</androidx.constraintlayout.widget.ConstraintLayout>